    <tbody>
@foreach (var item in Model.eva_evalua_competencias_personas) {
    var nombre = "Csdf";
        <tr>
            
                @foreach (var i in Model.rh_cats_personas.Where(e => e.IdPersona == item.IdPersona))
                {
            <td>
                @Html.DisplayFor(modelItem => i.Nombre)
                @{nombre = i.Nombre;}
            </td>
                }
          
             
            <td>
                @Html.DisplayFor(modelItem => item.FechaReg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaLimite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Justificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eva_cat_competencias.DesCompetencia)
            </td>
          
            <td>
              
                <a asp-page="../Eva_momentos_metodologias/Index" 
                     asp-route-id="@item.IdPersona"
                    asp-route-nombre="@nombre"
                   asp-route-nomcompetencia="@item.eva_cat_competencias.DesCompetencia"
