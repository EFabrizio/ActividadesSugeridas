@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Persona
            </th>
      
            <th>
              Fecha Registro
            </th>
            <th>
                Fecha Límite
            </th>
            <th>
                Justificación
            </th>
            <th>
               Competencia
