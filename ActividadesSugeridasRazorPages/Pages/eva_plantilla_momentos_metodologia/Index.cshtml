@page
@model ActividadesSugeridasRazorPages.Pages.eva_plantilla_momentos_metodologia.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Plantilla Momentos Generales</h2>

<p>
    <a class="btn btn-success btn-md active" role="button" asp-page="Create">Crear Nueva de Plantilla Momentos</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.eva_plantillas_momentos_metodologia[0].DesMomento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.eva_plantillas_momentos_metodologia[0].Objetivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.eva_plantillas_momentos_metodologia[0].Secuencia)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.eva_plantillas_momentos_metodologia[0].Metodologia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eva_plantillas_momentos_metodologia[0].PlantillaMetodologia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.eva_plantillas_momentos_metodologia) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesMomento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Objetivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Secuencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Metodologia.IdMetodologia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlantillaMetodologia.IdPlantillaMetodo)
            </td>
            <td>
                <a class="btn btn-default btn-md active" role="button" asp-page="./Edit" asp-route-id="@item.IdMomento">Editar</a> |
                <a class="btn btn-info btn-md active" role="button" asp-page="./Details" asp-route-id="@item.IdMomento">Detalles</a> |
                <a class="btn btn-danger btn-md active" role="button" asp-page="./Delete" asp-route-id="@item.IdMomento">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
