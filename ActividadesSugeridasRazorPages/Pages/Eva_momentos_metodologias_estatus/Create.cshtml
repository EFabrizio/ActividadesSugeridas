@page
@model ActividadesSugeridasRazorPages.Pages.Eva_momentos_metodologias_estatus.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Crear nuevo status del Momento</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="eva_momentos_metodologias_estatus.IdPersona" class="control-label">Persona</label>
                <select asp-for="eva_momentos_metodologias_estatus.IdPersona" class ="form-control" asp-items="ViewBag.IdPersona"></select>
            </div>
            <div class="form-group">
                <label asp-for="eva_momentos_metodologias_estatus.IdCompetencia" class="control-label">Competencia</label>
                <select asp-for="eva_momentos_metodologias_estatus.IdCompetencia" class ="form-control" asp-items="ViewBag.IdCompetencia"></select>
            </div>
            <div class="form-group">
                <label asp-for="eva_momentos_metodologias_estatus.IdMomentoDet" class="control-label">Momento</label>
                <select asp-for="eva_momentos_metodologias_estatus.IdMomentoDet" class ="form-control" asp-items="ViewBag.IdMomentoDet"></select>
            </div>
            <div class="form-group">
                <label asp-for="eva_momentos_metodologias_estatus.IdTipoEstatus" class="control-label">Tipo de estatus</label>
                <select asp-for="eva_momentos_metodologias_estatus.IdTipoEstatus" class ="form-control" asp-items="ViewBag.IdTipoEstatus"></select>
            </div>
            <div class="form-group">
                <label asp-for="eva_momentos_metodologias_estatus.IdEstatus" class="control-label">Estatus</label>
                <select asp-for="eva_momentos_metodologias_estatus.IdEstatus" class ="form-control" asp-items="ViewBag.IdEstatus"></select>
            </div>
            <div class="form-group">
                <label asp-for="eva_momentos_metodologias_estatus.FechaEstatus" class="control-label">Fecha de Estatus</label>
                <input type="text" value="@Model.fecha" asp-for="eva_momentos_metodologias_estatus.FechaEstatus" class="form-control" readonly />
                <span asp-validation-for="eva_momentos_metodologias_estatus.FechaEstatus" class="text-danger"></span>
            </div>
            <div class="form-group">
             
                <input type="hidden" asp-for="eva_momentos_metodologias_estatus.Actual" class="form-control" value="1"  />
             
            </div>
            <div class="form-group">
                <label asp-for="eva_momentos_metodologias_estatus.Observacion" class="control-label">Observación</label>
                <textarea rows="5" cols="70" asp-for="eva_momentos_metodologias_estatus.Observacion" class="form-control"></textarea>
                <span asp-validation-for="eva_momentos_metodologias_estatus.Observacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eva_momentos_metodologias_estatus.IdUsuarioReg" class="control-label">Usuario registro</label>
                <input asp-for="eva_momentos_metodologias_estatus.IdUsuarioReg" class="form-control" />
                <span asp-validation-for="eva_momentos_metodologias_estatus.IdUsuarioReg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info btn-md active" role="button" asp-page="./Index" asp-route-id="@Model.idMomento">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
