@page
@model ActividadesSugeridasRazorPages.Pages.Eva_actividades_sug_estatus.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Detalles de Estatus de Actividades Sugeridas</h2>


<div>
    
    <hr />
   
    <dl>
        <dt>
            Fecha
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Eva_actividad_sug_estatus.FechaEstatus)
        </dd>
        <dt>
            Actual
        </dt>
        <dd>
            @if (Model.Eva_actividad_sug_estatus.Actual == "1")
         {
            <input type="checkbox" value="1" checked />
         }
         else
        {
        <input type="checkbox" value="0" />
        }
        </dd>
        <dt>
            Observación
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Eva_actividad_sug_estatus.Observacion)
        </dd>
        <dt>
            Actividad
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Eva_actividad_sug_estatus.Eva_cat_actividades_sugeridas.DesActividad)
        </dd>
        <dt>
            Tipo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Eva_actividad_sug_estatus.Eva_cat_tipo_actividades_sugeridas.DesTipoActividadSug)
        </dd>
        <dt>
            Estatus
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Eva_actividad_sug_estatus.Cat_estatus.DesEstatus)
        </dd>
    </dl>
           
        
</div>
