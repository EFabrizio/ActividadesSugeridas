@page
@model ActividadesSugeridasRazorPages.Pages.Cat_estatus.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>¿Está seguro que desea eliminar este Estatus?</h2>


<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Descripción Estatus
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cats_estatus.DesEstatus)
        </dd>
        <dt>
            Fecha de Registro
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cats_estatus.FechaReg)
        </dd>
        <dt hidden>
            @Html.DisplayNameFor(model => model.Cats_estatus.Cat_tipo_estatus)
        </dt>
        <dd hidden>
            @Html.DisplayFor(model => model.Cats_estatus.Cat_tipo_estatus.IdTipoEstatus)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Cats_estatus.IdEstatus" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a class="btn btn-info btn-md active" role="button" asp-page="./Index">Regresar</a>
    </form>
</div>
