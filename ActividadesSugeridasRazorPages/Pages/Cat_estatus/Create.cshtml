@page
@model ActividadesSugeridasRazorPages.Pages.Cat_estatus.CreateModel

@{
    ViewData["Title"] = "Create";
}

<br />
<h4>Crear Nuevo Estatus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden >
                <label asp-for="Cats_estatus.IdTipoEstatus" class="control-label"></label>
                <select asp-for="Cats_estatus.IdTipoEstatus" value = "1" class ="form-control" asp-items="ViewBag.IdTipoEstatus"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cats_estatus.DesEstatus" class="control-label">Descripción de Estatus</label>
                <input asp-for="Cats_estatus.DesEstatus" class="form-control" />
                <span asp-validation-for="Cats_estatus.DesEstatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cats_estatus.FechaReg" class="control-label">Fecha</label>
                <input type="text" asp-for="Cats_estatus.FechaReg" class="form-control" readonly value="@Model.fecha" />
                <span asp-validation-for="Cats_estatus.FechaReg" class="text-danger"></span>
            </div>
            <div class="form-group">
                     <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info btn-md active" role="button" asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
